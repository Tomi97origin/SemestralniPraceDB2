<Window x:Class="SemestralniPraceDB2.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SemestralniPraceDB2"
        mc:Ignorable="d"
        Title="MainWindow" Height="450" Width="800">
    <StackPanel>
        <Label Content="Vráceno z databáze:"
               Width="120"
               VerticalAlignment="Center"/>
        <TextBox    Width="400"
                    MaxLength="100"
                    Name="databaseResultTextBox"
                    Text="{Binding Path=DatabaseResult.Text, Mode=OneWay}"
                    VerticalAlignment="Center"
                    IsReadOnly="True"/>
        <Button Width="100"
                Height="25"
                Margin="5"
                Content="Připojit a načíst"
                Command="{Binding ConnectAndGetCommand}"/>
    </StackPanel>
</Window>
