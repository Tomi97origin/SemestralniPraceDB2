<UserControl x:Class="SemestralniPraceDB2.Views.TopMenuView"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:SemestralniPraceDB2.Views"
             mc:Ignorable="d" 
             d:DesignHeight="100"
             d:DesignWidth="800"
             Background="AliceBlue">
    <StackPanel Orientation="Horizontal">
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="MakingOrderForWarehouse">
            <StackPanel>
                <Image Source="/Views/Images/note_ico.png" />
                <TextBlock Text="Vytvořit&#x0a;objednávku" />
            </StackPanel>
        </Button>
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="NotImplementedYet">
            <StackPanel>
                <Image Source="/Views/Images/schedule_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="NotImplementedYet">
            <StackPanel>
                <Image Source="/Views/Images/horseShoe_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="NotImplementedYet">
            <StackPanel>
                <Image Source="/Views/Images/riderBoot_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="NotImplementedYet">
            <StackPanel>
                <Image Source="/Views/Images/holiday_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding SaveCommand}">
            <StackPanel>
                <Image Source="/Views/Images/save_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding UpdateViewCommand}"
                CommandParameter="NotImplementedYet">
            <StackPanel>
                <Image Source="/Views/Images/archive_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
        <Button Command="{Binding PostOnTelegramCommand}">
            <StackPanel>
                <Image Source="/Views/Images/telegram_ico.png" />
                <TextBlock Text="Dummy" />
            </StackPanel>
        </Button>
    </StackPanel>

    <UserControl.Resources>

        <Style TargetType="Button">
            <Setter Property="Margin"
                    Value="0,0,0,0" />
            <Setter Property="MinWidth"
                    Value="80" />
            <Setter Property="Background"
                    Value="AliceBlue" />
            <Setter Property="BorderThickness"
                    Value="0" />
        </Style>

        <Style TargetType="Image">
            <Setter Property="Height"
                    Value="30px" />
        </Style>

        <Style TargetType="StackPanel">
            <Setter Property="Margin"
                    Value="5" />
        </Style>

        <Style TargetType="TextBlock">
            <Setter Property="TextAlignment"
                    Value="Center" />
            <Setter Property="Height"
                    Value="35px" />
            <Setter Property="VerticalAlignment"
                    Value="Center" />
            <Setter Property="Margin"
                    Value="5" />
        </Style>

    </UserControl.Resources>
</UserControl>
